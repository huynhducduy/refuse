{
  "compilerOptions": {
    "target": "esnext",
    "useDefineForClassFields": true,
    "module": "esnext",
    "moduleResolution": "NodeNext",
    "strict": true,
    "jsx": "preserve",
    "sourceMap": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "lib": ["es2015","esnext", "dom", "DOM.Iterable"],
    "types": [],
    "skipLibCheck": true
  },
  "include": ["src/**/*.ts", "src/**/*.mts"]
}
